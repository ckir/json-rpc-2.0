{
  "name": "@ckir/json-rpc-2.0",
  "description": "JSON-RPC 2.0 client and server",
  "version": "1.0.9",
  "author": "Costas Kirgoussios",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "nodemon --ext js,ts,json,env --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "prepare": "husky",
    "build": "tsc --project tsconfig.build.json",
    "build:clean": "rm -rf tsconfig.build.tsbuildinfo && rm -rf ./dist",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules mocha --require ts-node/register \"./src/**/*.spec.ts\"",
    "test:coverage": "npm run test -- --coverage",
    "test:ci": "npm run test -- --colors --coverage --ci",
    "lint": "eslint --ext .ts,.js .",
    "format": "prettier \"./**\" --write --ignore-unknown",
    "format:check": "prettier \"./**\" --ignore-unknown --check"
  },
  "dependencies": {
    "dotenv": "16.5.0",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/compat": "1.4.0",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.36.0",
    "@jest/globals": "30.2.0",
    "@jest/types": "30.0.5",
    "@types/chai": "^5.2.2",
    "@types/jest": "30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.6.0",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.46.1",
    "@typescript-eslint/parser": "8.39.1",
    "chai": "^5.2.1",
    "cross-env": "7.0.3",
    "eslint": "9.33.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-tsdoc": "0.4.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "jest": "30.0.5",
    "lint-staged": "16.2.4",
    "mocha": "^11.7.1",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "sinon": "^21.0.0",
    "supertest": "7.1.4",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "typescript": "5.9.2"
  }
}
